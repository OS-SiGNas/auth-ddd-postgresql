{
	"name": "auth-ddd",
	"version": "0.0.1",
	"main": "dist/index.js",
	"type": "module",
	"keywords": [],
	"author": "Alfredo Manrique",
	"license": "MIT",
	"description": "Implement Auth using typescript/POO with EDD and DDD architecture",
	"scripts": {
		"start": "NODE_ENV=production node dist/index.js",
		"dev": "NODE_ENV=development nodemon --watch 'src/**/*.ts' --exec 'ts-node --transpile-only src/index.ts'",
		"dev:node": "NODE_ENV=development node --experimental-strip-types --watch src/index.ts",
		"dev:concurrently": "NODE_ENV=development concurrently 'sh ./dev-mode.sh' 'sh ./dev-swc.sh' ",
		"dev:concurrently2": "NODE_ENV=development concurrently 'sh ./dev-swc.sh' 'sh ./dev-mode.sh'",
		"typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli",
		"migration:generate": "typeorm migration:generate ./migrations/PostRefactoring",
		"migration:run": "typeorm migration:run -- -d path-to-datasource-config",
		"build": "tsc",
		"swc": "swc src -d ./dist --strip-leading-paths",
		"swc:watch": "swc src -wd ./dist --strip-leading-paths",
		"prettier": "prettier --write src",
		"lint": "eslint ./src/**",
		"lint:fix": "eslint ./src/** --fix",
		"check": "tsc --noEmit",
		"test": "NODE_ENV=testing node --loader ts-node/esm --test --watch"
	},
	"imports": {
		"#Config": "./dist/config.js",
		"#Domain/*": "./dist/Domain/*",
		"#Infrastructure/*": "./dist/Infrastructure/*",
		"#shared/*": "./dist/Applications/shared/*",
		"#subscribers/*": "./dist/Applications/subscribers/*",
		"#auth/*": "./dist/Applications/auth/*",
		"#users/*": "./dist/Applications/users/*"
	},
	"devDependencies": {
		"@eslint/js": "^9.21.0",
		"@swc/cli": "^0.4.0",
		"@swc/core": "^1.11.1",
		"@types/amqplib": "^0.10.6",
		"@types/bcryptjs": "^2.4.6",
		"@types/cors": "^2.8.17",
		"@types/eslint-plugin-security": "^3.0.0",
		"@types/express": "^4.17.21",
		"@types/jsonwebtoken": "^9.0.9",
		"@types/node": "^20.17.19",
		"@types/nodemailer": "^6.4.17",
		"concurrently": "^9.1.2",
		"eslint": "^9.21.0",
		"eslint-plugin-security": "^3.0.1",
		"globals": "^15.15.0",
		"nodemon": "^3.1.9",
		"prettier": "^3.5.2",
		"ts-node": "^10.9.2",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.25.0"
	},
	"dependencies": {
		"@fastify/cors": "^10.1.0",
		"@fastify/helmet": "^12.0.1",
		"amqplib": "^0.10.5",
		"bcryptjs": "^2.4.3",
		"cors": "^2.8.5",
		"express": "5.0.0",
		"fastify": "5.0.0-alpha.4",
		"helmet": "^7.2.0",
		"jsonwebtoken": "^9.0.2",
		"nodemailer": "^6.10.0",
		"pg": "^8.13.3",
		"reflect-metadata": "^0.2.2",
		"tsx": "^4.19.3",
		"typeorm": "^0.3.20",
		"winston": "^3.17.0",
		"zod": "^3.24.2"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"@swc/core"
		]
	}
}
